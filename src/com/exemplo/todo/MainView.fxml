<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.exemplo.todo.MainController">
    <ImageView fx:id="gifImageView" />
    <TextField fx:id="titleField" promptText="Title" />
    <TextField fx:id="descriptionField" promptText="Description" />
    <Button fx:id="addButton" text="Add" />
    <Button fx:id="editButton" text="Edit" disable="true" />
    <Button fx:id="deleteButton" text="Delete" disable="true" />
    <ListView fx:id="listView" />
</VBox>
